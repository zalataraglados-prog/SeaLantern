{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sea Lantern",
  "version": "0.3.0",
  "identifier": "com.fpsz.sea-lantern",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sea Lantern",
        "width": 1280,
        "height": 800,
		"minWidth": 960,
		"minHeight": 600,
		"center": true,
		"decorations": false,
		"transparent": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": ["SimpChinese"]
      }
    },
    "publisher": "FPS_Z",
    "shortDescription": "Minecraft 服务器管理器",
    "longDescription": "Sea Lantern 是一个现代化的 Minecraft 服务器管理工具，支持服务器创建、控制台管理、玩家管理等功能。"
  }
}
